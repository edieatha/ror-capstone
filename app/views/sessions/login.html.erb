<%= form_for @user, html: {class:'box'} ,url: sessions_login_path do |f|%>
<h1>Login</h1>
<p class="warning"><%= flash.notice %></p>
  <p>
    <%= f.text_field :name, placeholder: 'Name' %>
  </p>
  <p>
    <%= f.submit "Log in" %>
  </p>
  <p>
      <%= link_to 'Register', new_user_path() %>
  </p>
<% end %>
